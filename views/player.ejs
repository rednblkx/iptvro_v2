<html>
  <head>
    <link href="https://vjs.zencdn.net/8.0.4/video-js.css" rel="stylesheet" />
  </head>
  <body>
    <div>
      <!-- <video id="videoPlayer" controls></video> -->
      <video-js id="video_1" class="vjs-default-skin" controls preload="auto" width="1024" height="540" autoplay muted>
        <source src="<%- stream %>" autoplay>
      </video-js>
      
      <script src="https://vjs.zencdn.net/8.0.4/video.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/videojs-contrib-eme@5.0.1/dist/videojs-contrib-eme.js"></script>
      <script>
        var player = videojs('video_1', {
          liveui: true,
        plugins: {
          eme: {
            keySystems: {
              'com.widevine.alpha': '<%- proxy %>'
              },
            emeHeaders: <%- JSON.stringify(headers) %>
          }
        }
      });
      </script>
    </div>
  </body>
</html>